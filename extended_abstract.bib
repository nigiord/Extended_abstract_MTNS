	year = {2010},
	keywords = {Algorithms, Computational Biology, Computational Biology: methods, Fungal, Gene Expression Regulation, Genetic, Genome, Messenger, Messenger: analysis, Messenger: chemistry, Messenger: metabolism, Models, Protein Biosynthesis, Proteins, Proteins: analysis, Proteins: chemistry, Proteins: metabolism, Ribosomes, Ribosomes: metabolism, {RNA}, Saccharomyces, Saccharomyces: genetics, Saccharomyces: physiology, Temperature},
