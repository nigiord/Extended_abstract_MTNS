	author = {Segrè, Daniel and Vitkup, Dennis and Church, George M},
	year = {2002},
	keywords = {Biological, Biomass, Computer Simulation, Escherichia coli, Escherichia coli: metabolism, Glycolysis, Metabolism, Models, Pentose Phosphate Pathway, Predictive Value of Tests},
